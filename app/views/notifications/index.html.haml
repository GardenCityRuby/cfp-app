- content_for :header do
  Notifications

.row
  .col-xs-12.text-center
    =link_to "Mark all as read",
      mark_all_as_read_notifications_path,
      method: :post,
      class: 'btn btn-default btn-xs'
.row
  .col-md-12
    %table.notifications-table.table
      %thead
        %tr
          %th Message
          %th.actions Actions
      %tbody
        - notifications.each do |notification|
          %tr{ class: notification.read? ? '' : 'warning' }
            %td= notification.message
            %td= link_to('Show', notification)
